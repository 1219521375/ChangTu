<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/action_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Toolbar"
        android:navigationIcon="@drawable/ic_delete"
        app:navigationIcon="@drawable/ic_delete"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/nearby_add_toolbar_title"
        >
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/nearby_content_edit_text"
            android:textSize="16sp"
            android:hint="@string/nearby_add_edit_text_hint"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:gravity="top"/>
        <ImageView
            android:id="@+id/image_view"
            android:src="@drawable/fab_fast_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nearby_content_edit_text"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/address_text_view"
            tools:text="shanxitaiyuuanjiancaoping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@+id/nearby_content_edit_text"
            android:layout_toEndOf="@+id/image_view"/>
    </RelativeLayout>
</LinearLayout>
